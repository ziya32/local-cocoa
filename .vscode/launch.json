{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug(with backend)",
          "type": "node",
          "request": "launch",
          "cwd": "${workspaceFolder}",
          "runtimeExecutable": "npm",
          "runtimeArgs": [
              "run",
              "dev:electron"
          ],
          "env": { // Overwrite env variables
              "LOCAL_RUNTIME_ROOT": "${workspaceFolder}/runtime",
              "LOCAL_SERVICE_LAUNCH_PYTHON_SERVER": "true",
              "DEBUG": "true",
              "PYTHONUNBUFFERED": "1",
              "PYDEVD_DISABLE_FILE_VALIDATION": "1",
              "DEBUGPY_PYTHON_PATH": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
              "LOCAL_SERVICE_DEBUG_WAIT": "false",   // enable if you need to debug python server startup
              "LOCAL_SERVICE_DEBUG_PORT": ""         // use 5678 if you nened to attach debug
          },
          "console": "integratedTerminal",
          "autoAttachChildProcesses": true,
          "preLaunchTask": "npm: dev:renderer",
          "skipFiles": [
              "<node_internals>/**"
          ]
      },
      {
          "name": "Debug(NO backend)",
          "type": "node",
          "request": "launch",
          "cwd": "${workspaceFolder}",
          "runtimeExecutable": "npm",
          "runtimeArgs": [
              "run",
              "dev:electron"
          ],
          "env": { // Overwite env variables
              "LOCAL_SERVICE_LAUNCH_PYTHON_SERVER": "false"
          },
          "console": "integratedTerminal",
          "autoAttachChildProcesses": true,
          "preLaunchTask": "npm: dev:renderer",
          "skipFiles": [
              "<node_internals>/**"
          ]
      }
  ],
}