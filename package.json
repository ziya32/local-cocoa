{
    "name": "local-cocoa",
    "productName": "Local Cocoa",
    "version": "0.3.0",
    "private": true,
    "description": "Local Cocoa personal agent with React renderer and FastAPI backend",
    "main": "dist-electron/main/main.js",
    "scripts": {
        "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
        "dev:renderer": "vite --mode dev",
        "dev:electron": "cross-env NODE_ENV=dev electron --trace-deprecation scripts/electron-dev-entry.js",
        "models:download": "node scripts/download_tiny_models.js",
        "services:lite": "node scripts/start-lite-server.js",
        "build": "npm run build:renderer && npm run build:electron",
        "build:renderer": "vite build",
        "build:electron": "tsc -p src/main/tsconfig.json",
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --ext .ts,.tsx",
        "lint:fix": "eslint . --ext .ts,.tsx --fix",
        "prepare": "husky",
        "preview": "npm run build && electron dist-electron/main/main.js",
        "dist": "bash runtime/local_rag_dist/run.sh",
        "dist:dmg": "npm run build && electron-builder --mac dmg",
        "dist:dmg-debug": "npm run build && electron-builder --mac dmg -c.mac.identity=null",
        "dist:exe": "npm run build && electron-builder --win nsis"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix",
            "eslint"
        ]
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.1.18",
        "archiver": "^7.0.1",
        "clsx": "^2.1.1",
        "dotenv": "^17.2.3",
        "dotenv-expand": "^12.0.3",
        "electron-log": "^5.4.3",
        "html2canvas": "^1.4.1",
        "i18next": "^25.8.0",
        "i18next-browser-languagedetector": "^8.2.0",
        "lucide-react": "^0.562.0",
        "proxy-agent": "^6.5.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-i18next": "^16.5.3",
        "react-markdown": "^10.1.0",
        "tailwind-merge": "^3.4.0"
    },
    "devDependencies": {
        "@electron/notarize": "^3.1.1",
        "@eslint/compat": "^2.0.1",
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@types/archiver": "^7.0.0",
        "@types/node": "^25.0.10",
        "@types/react": "^19.2.9",
        "@types/react-dom": "^19.2.3",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "@vitejs/plugin-react": "^5.1.2",
        "autoprefixer": "^10.4.23",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "dotenv-expand": "^12.0.3",
        "electron": "^40.0.0",
        "electron-builder": "^26.5.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.26",
        "globals": "^17.1.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.18",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vitest": "^4.0.18"
    },
    "engines": {
        "node": ">=18.17.0"
    },
    "build": {
        "appId": "com.local.cocoa",
        "productName": "Local Cocoa",
        "afterSign": "scripts/notarize.js",
        "directories": {
            "output": "release",
            "buildResources": "resources"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*",
            "package.json",
            "config/*",
            "assets/*"
        ],
        "extraResources": [
            {
                "from": "runtime/local-cocoa-server",
                "to": "local-cocoa-server"
            },
            {
                "from": "plugins",
                "to": "plugins"
            },
            {
                "from": "runtime/llama-cpp/bin",
                "to": "llama-cpp/bin"
            },
            {
                "from": "runtime/whisper-cpp/bin",
                "to": "whisper-cpp/bin"
            }
        ],
        "mac": {
            "icon": "assets/icon.png",
            "category": "public.app-category.productivity",
            "target": "dmg",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist",
            "identity": "Jingkang Yang (7ZUP3JXC69)",
            "extendInfo": {
                "CFBundleName": "Local Cocoa",
                "CFBundleDisplayName": "Local Cocoa"
            }
        },
        "win": {
            "icon": "assets/icon.png",
            "target": "nsis",
            "verifyUpdateCodeSignature": false
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": false
        }
    }
}
